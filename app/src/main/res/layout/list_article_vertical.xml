<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/frogo_rv_dimen_16dp"
    android:layout_marginEnd="@dimen/frogo_rv_dimen_16dp"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:background="@drawable/frogo_rv_bg_card_8dp"
    android:clickable="true"
    android:elevation="@dimen/frogo_rv_dimen_2dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/frogo_rv_dimen_16dp">

    <ImageView
        android:id="@+id/iv_url"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frogo_rv_dimen_128dp"
        android:layout_marginBottom="@dimen/frogo_rv_dimen_8dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/frogoTvListTitle"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_published"
        style="@style/FrogoTvListSubTitle"
        android:text="@string/frogo_rv_is_empty_data" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/FrogoTvListDescription"
        android:text="@string/frogo_rv_is_empty_data" />

</LinearLayout>